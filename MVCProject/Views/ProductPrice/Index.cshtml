@model IEnumerable<MVCProject.Models.ProductPrice>

@{
    ViewBag.Title = "Danh sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giá sản phẩm</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Sản phẩm
        </th>
        <th width="10%">
            Giá
        </th>
        <th width="10%">
           Ngày tạo
        </th>
        <th width="20%">
            Mô tả
        </th>
        <th width="15%">
            Mã tỉnh/thành phố
        </th>
        <th width="10%">&nbsp;</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @if(((List<MVCProject.Models.Product>)ViewData["ProductList"]).Count > 0)
            {
                MVCProject.Models.Product i = ((List<MVCProject.Models.Product>)ViewData["ProductList"]).Single(s=>s.ID == item.ProductID);
                if(i != null)
                {
                    @Html.Raw(i.ProductName);
                }
            }
        </td>
        <td align="right">
            @Double.Parse(item.Price.ToString()).ToString("#,###.00")
        </td>
        <td>
            @DateTime.Parse(item.Created.ToString()).ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LocationID)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.ID })
        </td>
    </tr>
}

</table>
